.recommend-lists-title{
  font-size: 38rpx;
  color: #FF301D;
  line-height: 38rpx;
  padding: 30rpx 0 0rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.recommend-lists-title image{
  width: 30rpx;
  height: 15rpx;
}
.recommend-lists-title text{
  margin: 0 10rpx;
}

.withdraw-intro-title{
  width: 653rpx;
  margin: 58rpx auto 0;
  text-indent: 40rpx;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #666666;
  line-height: 36rpx;
}
.image-box{
  text-align: center;
  margin-top: 30rpx;
}
.image-box image{
  width: 460rpx;
  height: 78rpx;
}
