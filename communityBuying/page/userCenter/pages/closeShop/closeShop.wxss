/* page/userCenter/pages/closeShop/closeShop.wxss */
.P-close-shop{
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 20rpx 0 100rpx;
  box-sizing: border-box;
}
.shop-info-item{
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 0 30rpx;
}
.shop-info-item-text{
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
}
.shop-info-item-value{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999999;
}

.close-reason-content{
  margin-top: 20rpx;
  background-color: #fff;
  height: 640rpx;
  padding: 28rpx 38rpx;
  box-sizing: border-box;
}
.close-reason-text{
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  line-height: 32rpx;
}
.textarea-content{
  margin-top: 27rpx;
  background: #F7F7F7;
  border-radius: 6rpx;
}
.textarea{
  width: 100%;
  height: 367rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.textarea-holder{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #CCCCCC;
}
.textarea-num{
  text-align: right;
  padding-right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #CCCCCC;
}
.textarea-num.alert{
  color: #ff5e53;
}
.close-reason-tips{
  display: flex;
  align-items: center;
  margin-top: 27rpx;
}
.icon-circle{
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #D8D8D8;
}
.close-reason-tips-text{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999999;
}

.btn-submit{
  width: 600rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  margin-left: -300rpx;
  border-radius: 40rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #fff;
}
.btn-submit.active{
  background-color: #ff5e53;
}
.btn-submit.disabled{
  background-color: #CCCCCC;
}