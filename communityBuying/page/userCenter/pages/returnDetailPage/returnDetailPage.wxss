.P-order-return-detail{
  /* overflow: hidden; */
  min-height: 100vh;
  background-color: rgba(248, 248, 248, 0.75);
  font-family: PingFangSC-Medium;
  padding-bottom: 140rpx;
}
.header-tips{
  background:linear-gradient(270deg,#FF5e6f 100%,#ff4b4c 100%);
  height: 190rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 28rpx;
  text-align: center;
  overflow: hidden;
}
.header-tips-status{
  font-size: 32rpx;
  line-height: 32rpx;
  padding-bottom: 20rpx;
  margin-top: 50rpx;
  font-family: PingFangSC-Semibold;
}
.header-actions{
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-active-btn{
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #fff;
  color: #FF474B;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  border-radius: 100rpx;
  margin: 0 15rpx;
}
.header-cancel-btn{
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #fff;
  color: #B4B4B4;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  border-radius: 100rpx;
  margin: 0 15rpx;
}
