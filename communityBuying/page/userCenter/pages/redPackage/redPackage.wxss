/* page/userCenter/pages/redPackage/redPackage.wxss */
.P-red-package{
  height: 100vh;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
  padding-top: 106rpx;
  box-sizing: border-box;
}
.nav-header{
  height: 106rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
  display: flex;
}
.nav-item{
  flex: 1;
  text-align: center;
}
.nav-item-text{
  margin-top: 42rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #646464;
  line-height: 40rpx;
}
.nav-item-text.active{
  font-family: PingFangSC-Semibold;
  color: #2B2A3A;
}
.nav-bottom-line{
  margin: 10rpx auto 0;
  width:40rpx;
  height:14rpx;
  border-radius:100rpx;
  background-color:#1E6FFF;
}
.red-package-list{
  flex: 1;
  height: 1;
  padding: 10rpx 36rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}



.red-package-empty{
  padding-top: 204rpx;
  text-align: center;
}