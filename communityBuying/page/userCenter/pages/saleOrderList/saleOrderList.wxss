.P-oder-list{
  min-height: 100vh;
  padding-bottom: 3rpx;
  background-color: #fff;
  padding-top: 100rpx;
  box-sizing: border-box;
}
.bottom-line{
  background-color: #f7f7f7;
  height: 20rpx;
}
.user-sale-order-nav{
  display: flex;
  align-items: center;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0; 
  width: 100%;
  background-color: #fff;
}
.user-sale-order-nav-item{
  flex: 1;
  text-align: center;
  height: 100rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.user-sale-order-nav-item-text.active{
  color: #333;
}
.user-sale-order-nav-item-text{
  font-size: 28rpx;
  color: #999;
  line-height: 28rpx;
}
.user-nav-light{
  width: 40rpx;
  height: 14rpx;
  border-radius: 10rpx;
  background-color: #1E6FFF;
  margin: 16rpx auto 0;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0; 
  width: 100%;
  white-space:nowrap;
  font-size: 32rpx;
  height: 100rpx;
  /* border-bottom: solid 1rpx #efefef; */
  background-color: #fff;
  z-index: 100;
  line-height: 100rpx;
}
.nav-bar.flex{
  display: flex;
  align-items: center;
}
.nav-bar .item {
  display: inline-block;
  padding: 30rpx 40rpx 0;
  /* background-color: white;   */
  position: relative; 
}
.nav-bar .item .word{
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999;
}
.nav-bar .item.active .word{
  color: #333;
  /* border-bottom: 2px solid #ff0600; */
  font-size: 28rpx;
}
.nav-active-bottom{
  margin: 10rpx auto 0;
  width:40rpx;
  height:14rpx;
  border-radius:100rpx;
  background-color:#1E6FFF;
}
