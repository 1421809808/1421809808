.order-status{
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
}
.order-status.refund{
  color: #ccc;
}
.order-status.active{
  color: #ff5e53;
}
.order-item-info-num-price{
  text-align: right;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #666;
  padding: 30rpx 10rpx 0;
}
.order-item-info-num-price text{
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #151515;
}
.order-message-info{
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.order-message-items{
  flex: 1;
  width: 1rpx;
}
.order-message-item{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  line-height: 24rpx;
}
.order-message-item-text{
  color: #999;
}
.order-message-item-value{
  color: #666;
  margin-left: 10rpx;
}
view.btn-copy {
  margin-left: 40rpx;
  color: #1e6fff;
}
.order-sale-price{
  display: flex;
  align-items: flex-end;
}
.order-sale-price-text{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #999999;
}
.order-sale-price-value{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #FF5E53;
  line-height: 40rpx;
  margin-left: 10rpx;
}
.order-item-actions{
  padding: 30rpx 10rpx;
  display: flex;
  justify-content: flex-end;
}
.btn-active{
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 100rpx;
  background-color: #FF5E53;
  color: #fff;
  font-size: 28rpx;
  margin-left: 30rpx;
  flex-shrink:1;
}
.btn-default{
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 100rpx;
  font-family: PingFangSC-Regular;
  border: 2rpx solid #979797;
  color: #979797;
  font-size: 28rpx;
  flex-shrink:1;
}
.order-item-actions view{
  margin-left: 30rpx;
}
.order-item-actions view:first-child{
  margin-left: 0rpx;
}

