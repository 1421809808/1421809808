.order-item-container{
  /* margin-top: 20rpx; */
  background-color: #fff;
  padding: 12rpx 15rpx;
}
.order-item-container:first-child{
  margin-top: 0rpx;
}
.order-item-status-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  line-height: 22rpx;
  border-bottom: 1rpx solid#EAEAEA;
  padding: 20rpx 10rpx 10rpx;
  font-family: PingFangSC-Regular;
}
.order-item-status{
  color: #1E6FFF;
}
.order-item-status.red{
  color: #FF5E53;
}
.order-item-time{
  color: #999999;
}
.order-item-time text{
  margin-left: 20rpx;
}
.order-item-info{
  display: flex;
  align-items: center;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.order-item-info image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  background-color: #FAFAFA;
}
.order-item-info-desc{
  flex: 1;
  height: 160rpx;
  margin-left: 20rpx;
  padding: 8rpx 0;
  box-sizing: border-box;
}
.order-item-info-title-box{
  display: flex;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #333333;
  line-height: 40rpx;
}
.order-item-info-title{
  flex: 1;
  width: 1rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 10rpx;
}
.order-item-info-sku{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  color: #999;
  font-family: PingFangSC-Regular;
}
.order-type-content{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 28rpx;
}
.pro-tips{
  display: inline-block;
  width: auto;
  height: 34rpx;
  margin-right: 10rpx;
  border-radius: 8rpx;
  text-align: center;
}
.pro-tips.booking{
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  background-color: #fde7e5;
  width: 74rpx;
  line-height: 34rpx;
  color: #fd6058;
}

